<div class="new-wrapper">
  <h1 class="main-title__text">予定の新規追加</h1>

  <div class="form-container">
    <%= form_with(model: @plan, url: plans_path, class: "form") do |f| %>
      <div class="form-group">
        <%= f.label :title ,"タイトル"%>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :start_date ,"開始日" %>
          <%= f.date_field :start_date, class: "form-control", min: Date.current %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :end_date ,"終了日" %>
          <%= f.date_field :end_date, class: "form-control", min: Date.current %>
        </div>
      </div>
      <div class="form-check form__check-box">
        <%= f.check_box :all_day, class: "form-check-input" %>
        <%= f.label :all_day ,"終日の場合はチェックを入れます", class: "form__check-box-label" %>
      </div>
      <div class="form-group">
        <%= f.label :memo ,"スケジュールメモ" %>
        <%= f.text_area :memo, class: "form-control" %>
      </div>

      <div class="form-container__buttons">
          <%= link_to "キャンセル", :plans, class: "btn btn-light button button--border"%>
          <%= f.submit "保存", class: "btn btn-info button"%>
      </div>
    <% end %>
  </div>
</div>